{
  "name": "myproject",
  "version": "1.0.0",
  "description": "My Project",
  "scripts": {
    "copy-templates": "cp ormconfig.json dist/",
    "create-tables": "npm run build-ts && node dist/repository/CreateTable.js",
    "create-users": "npm run build-ts  && node dist/repository/CreateUsers.js",
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-templates",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-ts": "tsc -w",
    "serve": "npm run create-users && nodemon --inspect=127.0.0.1:9001 dist/Server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\""
  },
  "author": "Fargath",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^3.11.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "logger": "^0.0.1",
    "morgan": "^1.10.0",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.2",
    "ts-node": "^10.9.1",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/logger": "^0.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node-schedule": "^2.1.0",
    "@types/pg": "^8.10.2",
    "nodemon": "^2.0.20",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4"
  }
}
